<h1>New Advertisement</h1>

<div class="row">
 <div class="col-md-8">
  <%= form_for @ads do |a| %>

   <div class="form-group">
    <%= a.label :title %>
    <%= a.text_field :title, class: 'form-control', placeholder: "Enter a title" %>
   </div>

   <div class="form-group">
    <%= a.label :copy %>
    <%= a.text_area :copy, rows: 4, class: 'form-control', placeholder: "Enter a body" %>
   </div>

   <div class="form-group">
    <%= a.label :price %>
    <%= a.number_field :price, class: 'form-control', placeholder: "00" %>
   </div>

   <div class="form-group">
    <%= a.submit "Save", class: 'btn btn-success' %>
   </div>

  <% end %>
 </div>
</div>
